<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaceDetectionActivity"
    android:id="@+id/faceTopLayout"
    android:keepScreenOn="true"
    android:background="#000">

    <Button
        android:id="@+id/takePhoto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:enabled="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Take Photo"
        android:background="@drawable/button_back2"
        android:textColor="#fff"
       />
    <TextView
        android:id="@+id/leftEyeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Please open the left eye"
        android:textColor="#fff"
        android:layout_marginBottom="90dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/rightEyeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Please open the right eye"
        android:textColor="#fff"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/test"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:minHeight="100dp"/>
    <com.hsalf.smilerating.SmileRating
        android:id="@+id/smile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"/>

</RelativeLayout>